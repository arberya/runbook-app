<h1>Listing steps</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Book</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @steps.each do |step| %>
  <tr>
    <td><%= step.id %></td>
    <td><%= step.book_id %></td>
    <td><%= step.title %></td>
    <td><%= step.description %></td>
    <td><%= link_to 'Show', book_step_path(step.book,step) %></td>
    <td><%= link_to 'Edit', edit_step_path(step) %></td>
    <td><%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

