<%= form_for(@step, :html => { :class => "form label-inline", :multipart => true } ) do |f| %>

<% if @step.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@step.errors.count, "error") %> prohibited this step from being saved:</h2>
  <ul>
    <% @step.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="field">
  <%= f.label :step_Title %>
  <%= f.text_field :title, :size => 100  %>
</div>
<div class="field">
  <%= f.label :description %>
  <%= f.text_area :description, :rows => 5, :cols => 100 %>
<!--p>Note - You can and probably should use <a href="http://daringfireball.net/projects/markdown/">MarkDown</a> format here to provide detailed information regarding this step</p></span-->
</div>
<div class="field">
  <%= f.label :capture_output %>
  <%= f.check_box :capture_output %>
</div>

<div class="field">
  <%= f.label :step_screenshot %>
  <%= f.file_field :step_screenshot %>
</div>


<div class="field">
  <%= f.hidden_field :book_id %>
</div>

<button class="btn btn-blue btn-check">
  <p><%= link_to 'Back', book_path(@step.book) %></p>
</button>

<button class="btn btn-blue btn-check">
	<p><%= link_to_submit 'Create' %></p>
</button>

<% end %>
